@model ENC.tbl_senderinfo

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Sender's Information</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("First Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sender_fname)
        </dd>

        <dt>
            @Html.DisplayName("Last Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sender_lname)
        </dd>

        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sender_email)
        </dd>

        <dt>
            @Html.DisplayName("Secret Word")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.secret_word)
        </dd>

        <dt style="display:none;">
            @Html.DisplayName("Attribute")
        </dt>

        <dd style="display:none;">
            @Html.DisplayFor(model => model.sender_attribute)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
