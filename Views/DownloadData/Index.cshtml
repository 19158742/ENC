@model IEnumerable<ENC.Models.DownloadDataModel>

@{
    ViewBag.Title = "MyData";
}

<br />
<br />
<br />


@foreach (var item in Model)
{
    @Html.Label("File name - ") @Html.DisplayFor(modelItem => item.datafilename)
    <br />
    @Html.Label("Receiver's Key")
    @Html.TextBox("ReceiverKey")
    <br />
    @Html.Label("Sender's First Name")
    @Html.TextBox("SenderFirstName")
    <br />
    @Html.Label("Sender's Last Name")
    @Html.TextBox("SenderLastName")
    <br />
    @Html.Label("Sender's Email")
    @Html.TextBox("SenderEmail")
    <br />
    //@Html.ActionLink("Download", "Download", new { id = item })
    using (Html.BeginForm("Index", "DownloadData", FormMethod.Post, new { id = item.sr_id }))
    {
        <input type="submit" value="Download" />
    }
}